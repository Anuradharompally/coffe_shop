{{>scripts}}
    <script>
     (function(){
       console.log('Hello')
       $('#btn-order').click(function(event){
         if(event)
         event.preventDefault()

         var order = {
           name: $('#order-name').val(),
           email: $('#order-email').val(),
           order: $('#order-description').val()
         }
         console.log('Place Order' + JSON.stringify(order))
         $.ajax({
           url: '/order',
           method:'post',
           data: order,
           success: function(resp){
             console.log('Order Received:' +JSON.stringify(resp))
             $('#btn-order-container').html('<h3>Thanks ! Will send you an email when your order is ready!</h3>') 
            },
           error:function(resp){

           }
         })       
        })
     }) 
    </script>
